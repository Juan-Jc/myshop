{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
<div class="max-w-md mx-auto bg-white p-8 rounded shadow-md">
    <h1 class="text-3xl font-semibold mb-6 text-gray-800">Crear cuenta</h1>

    {# Mostrar errores globales del formulario #}
    {% if registrationForm.vars.errors|length > 0 %}
        <div class="mb-4 text-red-700 bg-red-100 border border-red-400 rounded px-4 py-3">
            {{ form_errors(registrationForm) }}
        </div>
    {% endif %}

    {{ form_start(registrationForm, {attr: {class: 'space-y-6'}}) }}
        <div>
            {{ form_label(registrationForm.name, null, {attr: {class: 'block text-gray-700 font-medium mb-1'}}) }}
            {{ form_widget(registrationForm.name, {attr: {class: 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.name) }}
        </div>

        <div>
            {{ form_label(registrationForm.email, null, {attr: {class: 'block text-gray-700 font-medium mb-1'}}) }}
            {{ form_widget(registrationForm.email, {attr: {class: 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div>
            {{ form_label(registrationForm.plainPassword, 'Contraseña', {attr: {class: 'block text-gray-700 font-medium mb-1'}}) }}
            {{ form_widget(registrationForm.plainPassword, {attr: {class: 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="flex items-center space-x-2">
            {{ form_widget(registrationForm.agreeTerms, {attr: {class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'Acepto los términos y condiciones', {attr: {class: 'text-gray-700'}}) }}
        </div>
        {{ form_errors(registrationForm.agreeTerms) }}

        <button type="submit" 
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded transition">
            Registrarse
        </button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
